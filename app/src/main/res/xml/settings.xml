<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="弹奏、音块及界面">
        <ly.pp.justpiano3.view.SkinListPreference
            android:dialogTitle="设置管理皮肤"
            android:key="skin_list"
            android:summary="当前皮肤：默认皮肤"
            android:title="皮肤" />

        <PreferenceScreen
            android:summary="和弦音量、按键效果、吊线判断线等"
            android:title="弹奏设置">
            <intent
                android:data="settings_piano_play"
                android:targetClass="ly.pp.justpiano3.activity.SettingsMode"
                android:targetPackage="ly.pp.justpiano3" />
        </PreferenceScreen>

        <PreferenceScreen
            android:summary="音块速率、大小、音块变色等"
            android:title="音块设置">
            <intent
                android:data="settings_play_note"
                android:targetClass="ly.pp.justpiano3.activity.SettingsMode"
                android:targetPackage="ly.pp.justpiano3" />
        </PreferenceScreen>

        <PreferenceScreen
            android:summary="瀑布流音块移动速度、音块颜色等"
            android:title="瀑布流设置">
            <intent
                android:data="settings_waterfall"
                android:targetClass="ly.pp.justpiano3.activity.SettingsMode"
                android:targetPackage="ly.pp.justpiano3" />
        </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceCategory android:title="键盘、声音及MIDI设备">
        <ly.pp.justpiano3.view.SoundListPreference
            android:dialogTitle="设置管理音源"
            android:key="sound_list"
            android:summary="当前音源：默认音源"
            android:title="音源" />

        <PreferenceScreen
            android:summary="延音、混响、按键震动等"
            android:title="声音效果设置">
            <intent
                android:data="settings_sound"
                android:targetClass="ly.pp.justpiano3.activity.SettingsMode"
                android:targetPackage="ly.pp.justpiano3" />
        </PreferenceScreen>

        <PreferenceScreen
            android:summary="动画效果、标签展示、移调等"
            android:title="钢琴键盘">
            <intent
                android:data="settings_keyboard"
                android:targetClass="ly.pp.justpiano3.activity.SettingsMode"
                android:targetPackage="ly.pp.justpiano3" />
        </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceCategory android:title="联网模式">
        <PreferenceScreen
            android:summary="聊天记录、聊天音效、字体大小等"
            android:title="聊天设置">
            <intent
                android:data="settings_online_chat"
                android:targetClass="ly.pp.justpiano3.activity.SettingsMode"
                android:targetPackage="ly.pp.justpiano3" />
        </PreferenceScreen>

        <SwitchPreference
            android:defaultValue="true"
            android:key="keyboard_realtime"
            android:summaryOff="&lt;关闭&gt;每隔一段时间，将所有琴键按下或抬起操作统一进行传输，有少许延迟，整体流畅性更好"
            android:summaryOn="&lt;打开&gt;每个琴键按下或抬起时，立即传输数据，延迟较低，实时性好，能耗更高"
            android:title="联网键盘协奏模式" />
    </PreferenceCategory>

    <PreferenceCategory android:title="关于">
        <Preference
            android:key="app_version"
            android:title="软件版本" />
        <Preference
            android:summary="京ICP备2020039885号-3A"
            android:title="备案信息" />
    </PreferenceCategory>
</PreferenceScreen>
