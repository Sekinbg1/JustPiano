<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ol_rectangle_orange"
    android:orientation="vertical">

    <Button
        android:id="@+id/onetimeplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/selector_ol_button"
        android:text="单次播放"
        android:textColor="@color/white1"
        android:textSize="14sp" />

    <Button
        android:id="@+id/circulateplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/onetimeplay"
        android:background="@drawable/selector_ol_button"
        android:text="单曲循环"
        android:textColor="@color/white1"
        android:textSize="14sp" />

    <Button
        android:id="@+id/randomplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onetimeplay"
        android:layout_marginTop="5dp"
        android:background="@drawable/selector_ol_button"
        android:text="曲库随机"
        android:textColor="@color/white1"
        android:textSize="14sp" />

    <Button
        android:id="@+id/favorplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circulateplay"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/randomplay"
        android:background="@drawable/selector_ol_button"
        android:text="收藏随机"
        android:textColor="@color/white1"
        android:textSize="14sp" />

</RelativeLayout>
