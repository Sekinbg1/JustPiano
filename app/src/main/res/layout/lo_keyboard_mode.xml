<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keyboard1_count_down"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_ol_button"
                android:gravity="center"
                android:text="@string/keyboard_mode_minus"
                android:textColor="@color/white1"
                android:textSize="20sp">
            </Button>

            <Button
                android:id="@+id/keyboard1_move_left"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_ol_button"
                android:text="@string/keyboard_mode_arrow_left"
                android:textColor="@color/white1"
                android:textSize="20sp">
            </Button>

            <Button
                android:id="@+id/keyboard1_move_right"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_ol_button"
                android:text="@string/keyboard_mode_arrow_right"
                android:textColor="@color/white1"
                android:textSize="20sp">
            </Button>

            <Button
                android:id="@+id/keyboard1_count_up"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_ol_button"
                android:text="@string/keyboard_mode_plus"
                android:textColor="@color/white1"
                android:textSize="20sp">
            </Button>

            <Button
                android:id="@+id/keyboard_record"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_ol_button"
                android:text="@string/keyboard_mode_rec"
                android:textColor="@color/v3"
                android:textSize="20sp">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/keyboard_mode_title"
                android:textColor="@color/white1"
                android:textSize="22sp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/keyboard_setting"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_orange_button"
                android:src="@drawable/setting">
            </ImageView>

            <Button
                android:id="@+id/keyboard2_count_down"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_orange_button"
                android:gravity="center"
                android:text="@string/keyboard_mode_minus"
                android:textColor="@color/white1"
                android:textSize="20sp">
            </Button>

            <Button
                android:id="@+id/keyboard2_move_left"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_orange_button"
                android:text="@string/keyboard_mode_arrow_left"
                android:textColor="@color/white1"
                android:textSize="20sp">
            </Button>

            <Button
                android:id="@+id/keyboard2_move_right"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_orange_button"
                android:text="@string/keyboard_mode_arrow_right"
                android:textColor="@color/white1"
                android:textSize="20sp">
            </Button>

            <Button
                android:id="@+id/keyboard2_count_up"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_orange_button"
                android:text="@string/keyboard_mode_plus"
                android:textColor="@color/white1"
                android:textSize="20sp">
            </Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboard_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/keyboard1_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="0.5"
            android:background="@drawable/selector_ol_button">

            <ly.pp.justpiano3.view.KeyboardView
                android:id="@+id/keyboard1_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:keepScreenOn="true"
                app:whiteKeyNum="8"
                app:whiteKeyOffset="28">
            </ly.pp.justpiano3.view.KeyboardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/keyboard2_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="0.5"
            android:background="@drawable/selector_orange_button">

            <ly.pp.justpiano3.view.KeyboardView
                android:id="@+id/keyboard2_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:keepScreenOn="true"
                app:whiteKeyNum="8"
                app:whiteKeyOffset="21">
            </ly.pp.justpiano3.view.KeyboardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
