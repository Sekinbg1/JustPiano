<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe9e9e9">

    <ImageView
        android:id="@+id/umeng_fb_new_reply_notifier"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="9dp"
        android:src="@drawable/umeng_fb_point_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/umeng_fb_list_item_selector"
        android:minHeight="50dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="11dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/umeng_fb_feedbackpreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="balabala"
            android:textColor="#ff818286"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/umeng_fb_dev_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Reply:Hi,We are working on it."
            android:textColor="#ff69a73b"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/umeng_fb_state_or_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="stateORdate"
            android:textColor="#ffbdbdbd"
            android:textSize="12dp" />
    </LinearLayout>
</RelativeLayout>
