<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/umeng_socialize_bind_bg">

    <TextView
        android:id="@+id/umeng_socialize_tipinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="使用已有账号发表评论"
        android:textColor="#ffffffff"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/umeng_socialize_alert_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/umeng_socialize_tipinfo"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp" />

    <LinearLayout
        android:id="@+id/umeng_socialize_alert_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/umeng_socialize_alert_body"
        android:layout_marginBottom="18dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp" />
</RelativeLayout>
