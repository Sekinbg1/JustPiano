<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_0dp">

    <Button
        android:id="@+id/ol_showinfo_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:background="@drawable/selector_ol_button"
        android:fontFamily="@font/main"
        android:text="@string/ol_btn_lv_info"
        android:textColor="@color/white1"
        android:textSize="16sp" />

    <Button
        android:id="@+id/ol_chat_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:background="@drawable/selector_ol_button"
        android:fontFamily="@font/main"
        android:text="@string/ol_btn_lv_pm"
        android:textColor="@color/white1"
        android:textSize="16sp" />

    <Button
        android:id="@+id/ol_couple_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:background="@drawable/selector_ol_button"
        android:fontFamily="@font/main"
        android:text="@string/ol_btn_lv_cp"
        android:textColor="@color/white1"
        android:textSize="16sp" />

    <Button
        android:id="@+id/ol_kickout_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:background="@drawable/selector_ol_button_login"
        android:fontFamily="@font/main"
        android:text="@string/ol_btn_lv_kick"
        android:textColor="@color/white1"
        android:textSize="16sp" />

    <Button
        android:id="@+id/ol_closepos_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:background="@drawable/selector_ol_button"
        android:fontFamily="@font/main"
        android:text="@string/ol_btn_lv_cls"
        android:textColor="@color/white1"
        android:textSize="16sp" />

    <Button
        android:id="@+id/ol_sound_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:background="@drawable/selector_ol_button"
        android:fontFamily="@font/main"
        android:text="@string/ol_btn_lv_mute"
        android:textColor="@color/white1"
        android:textSize="16sp"
        android:visibility="gone" />
</LinearLayout>
