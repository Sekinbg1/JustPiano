<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:background="@drawable/ol_rectangle_orange">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="家族升级"
                android:textColor="@color/white1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/ol_family_levelup_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:ems="30"
                android:gravity="top"
                android:text="升级信息"
                android:textColor="@color/white1"
                android:textSize="15sp" />

            <Button
                android:id="@+id/ol_family_levelup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_ol_button"
                android:enabled="false"
                android:text="升级"
                android:textColor="@color/white1"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="家族宣言"
                android:textColor="@color/white1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/ol_family_changedecl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_ol_button"
                android:text="更改家族宣言"
                android:textColor="@color/white1"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="家族考核曲"
                android:textColor="@color/white1"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/ol_family_test_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:enabled="false"
                android:text="申请者进入家族需要通过考核曲目(此功能暂未开放)"
                android:textColor="@color/white1"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxEms="30"
                    android:text="考核曲目："
                    android:textColor="@color/white1"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <AutoCompleteTextView
                    android:id="@+id/ol_family_test_name"
                    style="@style/AutoCompleteStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/search_box"
                    android:completionThreshold="1"
                    android:configChanges="keyboard"
                    android:divider="@null"
                    android:dropDownWidth="300dp"
                    android:dropDownHeight="130dp"
                    android:ems="30"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="输入曲目进行搜索"
                    android:imeOptions="actionGo|flagNoExtractUi|flagNoFullscreen"
                    android:listSelector="@android:color/transparent"
                    android:minWidth="100dp"
                    android:singleLine="true"
                    android:textColor="#ffffffff"
                    android:textColorHint="#90ffffff"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="目标分数："
                    android:textColor="@color/white1"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ol_family_test_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_back"
                    android:ems="30"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="bottom"
                    android:minWidth="100dp"
                    android:textColor="@color/white1"
                    android:textSize="16sp">

                    <requestFocus />

                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/ol_family_changetest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_ol_button"
                android:enabled="false"
                android:text="更改考核曲信息"
                android:textColor="@color/white1"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="家族徽章"
                android:textColor="@color/white1"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:ems="30"
                android:gravity="top"
                android:text="抱歉，当前客户端不支持家族族徽的上传，可联系开发者上传或等待日后的版本更新!"
                android:textColor="@color/white1"
                android:textSize="15sp" />

            <Button
                android:id="@+id/ol_family_changepic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                android:background="@drawable/selector_ol_button"
                android:enabled="false"
                android:text="修改家族徽章(从本地上传)"
                android:textColor="@color/white1"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

