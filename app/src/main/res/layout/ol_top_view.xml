<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_face"
        android:layout_width="64dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/ol_user_sex"
        android:layout_width="@dimen/dimen_10dp"
        android:layout_height="@dimen/dimen_10dp"
        android:layout_alignBottom="@+id/user_face"
        android:layout_alignEnd="@+id/user_face"
        android:src="@drawable/m" />

    <TextView
        android:id="@+id/ol_user_top"
        android:layout_width="@dimen/dimen_220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_toEndOf="@+id/user_face"
        android:layout_alignBottom="@+id/user_face"
        android:gravity="center_vertical"

        android:maxLines="1"
        android:text="@string/ol_msg_view_usr"
        android:textColor="@color/white1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/user_face"
        android:layout_alignTop="@+id/user_face"
        android:textStyle="bold"
        android:text="@string/ol_top_view_no"
        android:textColor="@color/exit"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ol_position_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/TextView01"
        android:layout_alignBaseline="@+id/TextView01"
        android:layout_alignBottom="@+id/TextView01"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/ol_top_view_i"
        android:textColor="@color/exit" />

    <TextView
        android:id="@+id/ol_score_top"
        android:layout_width="@dimen/dimen_160dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ol_user_top"
        android:layout_toEndOf="@+id/ol_user_top"
        android:layout_alignBaseline="@+id/ol_user_top"

        android:maxLines="1"
        android:text="@string/f_view"
        android:textColor="@color/white1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ol_nuns_top"
        android:layout_width="@dimen/dimen_160dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ol_score_top"
        android:layout_toEndOf="@+id/ol_score_top"
        android:layout_alignBaseline="@+id/ol_score_top"

        android:maxLines="1"
        android:text="@string/f_view"
        android:textColor="@color/white1"
        android:textSize="16sp" />
</RelativeLayout>
