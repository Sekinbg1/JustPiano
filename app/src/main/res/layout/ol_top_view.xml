<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_down"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_face"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/ol_user_sex"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignEnd="@+id/user_face"
        android:layout_alignBottom="@+id/user_face"
        android:src="@drawable/m" />

    <TextView
        android:id="@+id/ol_user_top"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_alignBottom="@+id/user_face"
        android:layout_toEndOf="@+id/user_face"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="用户"
        android:textColor="@color/white1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_face"
        android:layout_toEndOf="@+id/user_face"
        android:text="NO."
        android:textColor="@color/exit"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ol_position_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView01"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_toEndOf="@+id/TextView01"
        android:text="1"
        android:textColor="@color/exit"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ol_score_top"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ol_user_top"
        android:layout_alignBottom="@+id/ol_user_top"
        android:layout_toEndOf="@+id/ol_user_top"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="@color/white1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ol_nuns_top"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ol_score_top"
        android:layout_alignBottom="@+id/ol_score_top"
        android:layout_toEndOf="@+id/ol_score_top"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="@color/white1"
        android:textSize="16sp" />
</RelativeLayout>
