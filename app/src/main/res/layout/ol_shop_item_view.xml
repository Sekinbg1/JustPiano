<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_80dp"
    android:background="@drawable/selector_list_c"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ol_shop_item_pic"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:padding="@dimen/dimen_1dp"
        android:src="@drawable/family" />

    <LinearLayout
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ol_shop_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:textStyle="bold"
            android:gravity="start"
            android:text="@string/ol_shop_item_view_name"
            android:textColor="@color/white1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ol_shop_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:textStyle="bold"
            android:gravity="start"
            android:text="@string/ol_shop_item_view_intro"
            android:textColor="@color/white1"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.6"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ol_shop_item_price"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/ol_room_view_no"
                android:textColor="@color/white1"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/gold" />

        </LinearLayout>

        <Button
            android:id="@+id/ol_shop_item_buy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_marginEnd="@dimen/dimen_5dp"
            android:background="@drawable/selector_ol_button_login"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/ol_shop_item_view_buy"
            android:textColor="@color/white1"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
