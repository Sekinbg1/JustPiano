<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/filled_bar"
    android:gravity="center"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/midi_down_tune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/midi_down_tune"
        android:background="@drawable/back_puased"
        android:text="MIDI键盘降调"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/midi_tune"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/midi_down_tune"
        android:layout_alignBottom="@id/midi_down_tune"
        android:layout_toEndOf="@+id/midi_down_tune"
        android:background="@color/white1"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/midi_up_tune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/midi_tune"
        android:background="@drawable/back_puased"
        android:text="MIDI键盘升调"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/sound_down_tune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/midi_down_tune"
        android:layout_alignStart="@id/midi_down_tune"
        android:layout_alignEnd="@id/midi_down_tune"
        android:background="@drawable/selector_ol_green"
        android:gravity="center"
        android:text="声音降调"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/sound_tune"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/midi_tune"
        android:layout_alignStart="@id/midi_tune"
        android:layout_alignEnd="@id/midi_tune"
        android:layout_alignTop="@id/sound_down_tune"
        android:layout_alignBottom="@id/sound_down_tune"
        android:layout_toEndOf="@+id/sound_down_tune"
        android:background="@color/white1"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/sound_up_tune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/midi_up_tune"
        android:layout_alignStart="@id/midi_up_tune"
        android:layout_alignEnd="@id/midi_up_tune"
        android:layout_toEndOf="@+id/sound_tune"
        android:background="@drawable/selector_ol_green"
        android:gravity="center"
        android:text="声音升调"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_below="@id/sound_down_tune"
        android:layout_alignStart="@id/sound_down_tune"
        android:layout_alignEnd="@id/sound_up_tune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/skin_setting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_ol_orange"
            android:gravity="center"
            android:text="皮肤设置"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/sound_setting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_ol_orange"
            android:gravity="center"
            android:text="音源设置"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" />
    </LinearLayout>
</RelativeLayout>
