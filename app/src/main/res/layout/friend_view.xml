<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ol_friend_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ol_rectangle_orange"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/friend_sex"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/f_view"
            android:textColor="@color/white1"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/friend_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_5dp"
            android:src="@drawable/f" />

        <Button
            android:id="@+id/friend_dele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_ol_button_login"

            android:text="@string/account_name_del"
            android:textColor="@color/white1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/friend_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:layout_toStartOf="@+id/friend_dele"
            android:background="@drawable/selector_ol_button"

            android:text="@string/friend_view_pm"
            android:textColor="@color/white1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/friend_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_toStartOf="@+id/friend_send"
            android:background="@drawable/selector_ol_button"

            android:text="@string/friend_view_info"
            android:textColor="@color/white1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/friend_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_toStartOf="@+id/friend_info"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/friend_view_lv"
            android:textColor="@color/white1"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>
