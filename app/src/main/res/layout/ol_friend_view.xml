<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ol_friend_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/filled_box"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ol_friend_level"
            android:layout_width="@dimen/dimen_64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:gravity="right"
            android:text="@string/friend_view_lv"
            android:textColor="@color/settings"
            android:textSize="18sp"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/ol_friend_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/f" />

        <TextView
            android:id="@+id/ol_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:layout_toEndOf="@+id/ol_friend_sex"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/f_view"
            android:textColor="@color/white1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ol_friend_room"
            android:layout_width="@dimen/dimen_64dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_5dp"
            android:layout_toStartOf="@+id/ol_friend_level"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/ol_friend_view_location"
            android:textColor="@color/online"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ol_friend_drop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ol_friend_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/selector_ol_button"
            android:text="@string/friend_view_pm"
            android:textColor="@color/white1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ol_friend_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_toEndOf="@+id/ol_friend_send"
            android:background="@drawable/selector_ol_button"
            android:text="@string/ol_btn_lv_pm"
            android:textColor="@color/white1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ol_friend_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_toEndOf="@+id/ol_friend_chat"
            android:background="@drawable/selector_ol_button"
            android:text="@string/ol_friend_view_find"
            android:textColor="@color/white1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ol_friend_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_toEndOf="@+id/ol_friend_game"
            android:background="@drawable/selector_ol_button"
            android:text="@string/friend_view_info"
            android:textColor="@color/white1"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/ol_friend_gold_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_toEndOf="@+id/ol_friend_dialog"
            android:background="@drawable/selector_ol_button"
            android:text="@string/ol_btn_lv_gold_send"
            android:visibility="gone"
            android:textColor="@color/white1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ol_friend_dele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_ol_button_login"
            android:text="@string/account_name_del"
            android:textColor="@color/white1"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>
