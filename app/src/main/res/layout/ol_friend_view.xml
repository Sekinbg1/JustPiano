<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ol_friend_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/filled_box"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ol_friend_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="LV.36"
            android:textColor="@color/settings"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/ol_friend_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/f" />

        <TextView
            android:id="@+id/ol_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/ol_friend_sex"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ol_friend_room"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/ol_friend_level"
            android:gravity="center"
            android:text="大厅"
            android:textColor="@color/online"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ol_friend_drop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ol_friend_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/selector_ol_button"
            android:text="私信"
            android:textColor="@color/white1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ol_friend_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/ol_friend_chat"
            android:background="@drawable/selector_ol_button"
            android:text="找Ta"
            android:textColor="@color/white1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ol_friend_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/ol_friend_send"
            android:background="@drawable/selector_ol_button"
            android:text="私聊"
            android:textColor="@color/white1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ol_friend_dele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_orange_button"
            android:text="删除"
            android:textColor="@color/white1"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>
