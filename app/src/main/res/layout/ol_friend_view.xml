<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:mySwitch="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/ol_friend_bar" android:background="@drawable/filled_box" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/settings" android:gravity="center" android:id="@+id/ol_friend_level" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="LV.36" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/ol_friend_sex" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/f" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white1" android:gravity="center" android:id="@+id/ol_friend_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:text="TextView" android:layout_toRightOf="@+id/ol_friend_sex" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/online" android:gravity="center" android:id="@+id/ol_friend_room" android:layout_width="40sp" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="大厅" android:layout_toLeftOf="@+id/ol_friend_level" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/ol_friend_drop" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:textSize="18sp" android:textColor="@color/white1" android:id="@+id/ol_friend_send" android:background="@drawable/selector_ol_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="私信" android:layout_alignParentLeft="true"/>
        <Button android:textSize="18sp" android:textColor="@color/white1" android:id="@+id/ol_friend_game" android:background="@drawable/selector_ol_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="找Ta" android:layout_toRightOf="@+id/ol_friend_chat" android:layout_alignParentTop="true"/>
        <Button android:textSize="18sp" android:textColor="@color/white1" android:id="@+id/ol_friend_chat" android:background="@drawable/selector_ol_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="私聊" android:layout_toRightOf="@+id/ol_friend_send" android:layout_alignParentTop="true"/>
        <Button android:textSize="18sp" android:textColor="@color/white1" android:id="@+id/ol_friend_dele" android:background="@drawable/selector_orange_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="删除" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
