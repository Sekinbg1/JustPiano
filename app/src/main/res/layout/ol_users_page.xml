<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ground"
    android:gravity="center"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/app_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="资料与好友"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white1" />

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:gravity="center">

        <Button
            android:id="@+id/ol_userInfo_b"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#10c6ffe9"
            android:drawableTop="@drawable/info"
            android:text="资料"
            android:textColor="@color/white1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ol_friends_b"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#10293535"
            android:drawableTop="@drawable/friends"
            android:text="好友"
            android:textColor="@color/white1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ol_mail_b"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#10c6ffe9"
            android:drawableTop="@drawable/mail"
            android:text="信箱"
            android:textColor="@color/white1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ol_local_b"
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:background="#10293535"
            android:drawableTop="@drawable/local_people"
            android:text="导出"
            android:textColor="@color/white1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ol_search_b"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#10c6ffe9"
            android:drawableTop="@drawable/search"
            android:text="找人"
            android:textColor="@color/white1"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
