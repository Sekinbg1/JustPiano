<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_d"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ol_rectangle_blue">

        <ImageView
            android:id="@+id/user_face"
            android:layout_width="@dimen/dimen_240dp"
            android:layout_height="@dimen/dimen_240dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/defaultface" />

        <Button
            android:id="@+id/add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_face"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@drawable/selector_orange_button"

            android:text="@string/popuserinfo_add"
            android:textColor="@color/white1" />

        <Button
            android:id="@+id/send_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/add_friend"
            android:layout_alignEnd="@+id/user_face"
            android:layout_alignBottom="@+id/add_friend"
            android:background="@drawable/selector_orange_button"

            android:text="@string/popuserinfo_pm"
            android:textColor="@color/white1" />

        <TextView
            android:id="@+id/user_msg"
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/user_face"
            android:layout_alignEnd="@+id/user_face"
            android:layout_alignBottom="@+id/user_face"
            android:background="@drawable/filled_box"

            android:text="@string/popuserinfo_si"
            android:textColor="@color/white1"
            android:textColorLink="@color/white1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/user_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_face"
            android:layout_toStartOf="@+id/user_sex"
            android:background="@drawable/filled_box"

            android:maxLines="1"
            android:textColor="@color/white1" />

        <TextView
            android:id="@+id/user_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/user_age"
            android:layout_alignEnd="@+id/user_face"
            android:layout_alignBottom="@+id/user_age"
            android:background="@drawable/filled_box"

            android:maxLines="1"
            android:textColor="@color/white1" />

        <TextView
            android:id="@+id/user_kitiname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/user_face"
            android:layout_alignTop="@+id/user_face"
            android:background="@drawable/filled_box"

            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/yellow"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
