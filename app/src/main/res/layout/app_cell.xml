<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:mySwitch="http://schemas.android.com/apk/res-auto" android:background="@drawable/selector_ol_button" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="12dp" android:id="@+id/app_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="简介" android:layout_below="@+id/app_name" android:layout_alignLeft="@+id/app_name"/>
    <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="极品钢琴" android:layout_toRightOf="@+id/app_icon" android:layout_alignTop="@+id/app_icon"/>
    <ImageView android:id="@+id/app_icon" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginLeft="12dp" android:scaleType="fitXY" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <TextView android:textSize="12dp" android:textColor="@color/white1" android:id="@+id/app_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="1M" android:layout_toRightOf="@+id/app_name" android:layout_alignBaseline="@+id/app_name" android:layout_alignBottom="@+id/app_name"/>
</RelativeLayout>
