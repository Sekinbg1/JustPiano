<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/translent"
    android:gravity="center"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lo_extra_func_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_3dp"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:background="@drawable/selector_ol_button"
        android:gravity="center"
        android:text="@string/lo_extra_func_settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/lo_extra_func_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_3dp"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:layout_toEndOf="@+id/lo_extra_func_settings"
        android:background="@drawable/selector_ol_button"
        android:gravity="center"
        android:text="@string/lo_extra_func_sync"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/lo_extra_func_midi_import"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lo_extra_func_settings"
        android:layout_alignStart="@id/lo_extra_func_settings"
        android:layout_alignEnd="@id/lo_extra_func_settings"
        android:layout_marginTop="@dimen/dimen_3dp"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:background="@drawable/selector_ol_button"
        android:gravity="center"
        android:text="@string/lo_extra_func_midi_import"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/lo_extra_func_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lo_extra_func_sync"
        android:layout_alignStart="@id/lo_extra_func_sync"
        android:layout_alignEnd="@id/lo_extra_func_sync"
        android:layout_marginTop="@dimen/dimen_3dp"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:layout_toEndOf="@+id/lo_extra_func_midi_import"
        android:background="@drawable/selector_ol_button"
        android:gravity="center"
        android:text="@string/lo_extra_func_record"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/lo_extra_func_data_export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lo_extra_func_midi_import"
        android:layout_alignStart="@id/lo_extra_func_midi_import"
        android:layout_alignEnd="@id/lo_extra_func_midi_import"
        android:layout_marginTop="@dimen/dimen_3dp"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:background="@drawable/selector_ol_button"
        android:gravity="center"
        android:text="@string/lo_extra_func_data_export"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/lo_extra_func_total_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lo_extra_func_record"
        android:layout_alignStart="@id/lo_extra_func_record"
        android:layout_alignEnd="@id/lo_extra_func_record"
        android:layout_marginTop="@dimen/dimen_3dp"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:background="@drawable/selector_ol_button"
        android:gravity="center"
        android:text="@string/lo_extra_func_score"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp" />

</RelativeLayout>
