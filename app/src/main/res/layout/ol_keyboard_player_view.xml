<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ol_player_mod"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/filled_msg" />

        <ImageView
            android:id="@+id/ol_player_shoes"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <ImageView
            android:id="@+id/ol_player_trousers"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <ImageView
            android:id="@+id/ol_player_hair"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <ImageView
            android:id="@+id/ol_player_jacket"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/ol_player_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/ol_player_mod"
            android:layout_alignEnd="@+id/ol_player_mod"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/back_puased"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white1"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ol_keyboard_info"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/ol_player_name"
            android:layout_alignEnd="@+id/ol_player_mod"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@color/black"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:src="@drawable/stop">
            </ImageView>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/midi_note_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_gravity="top"
                    android:progress="100"
                    android:progressDrawable="@drawable/midi_note_progress">
                </ProgressBar>

                <TextView
                    android:id="@+id/midi_note_speed"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="13dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="0B/S"
                    android:singleLine="true"
                    android:textColor="@color/white1"
                    android:textSize="9sp" >
                </TextView>

            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:background="@color/white1"
                android:src="@drawable/midi_usb">
            </ImageView>

        </LinearLayout>

        <TextView
            android:id="@+id/ol_player_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ol_player_name"
            android:layout_alignEnd="@+id/ol_player_mod"
            android:gravity="start"
            android:singleLine="true"
            android:textColor="@color/green_r"
            android:textColorHint="@color/yellow_r"
            android:textSize="12sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/ol_ready_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ol_player_mod"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="@color/white1"
            android:textColorHint="@color/yellow_r"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ol_player_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ol_player_level"
            android:layout_alignEnd="@+id/ol_player_mod"
            android:gravity="start"
            android:singleLine="true"
            android:textColor="@color/yellow"
            android:textColorHint="@color/yellow_r"
            android:textSize="12sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/ol_player_clname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/filled_classname"
            android:gravity="center"
            android:maxEms="1"
            android:textColor="@color/white1"
            android:textColorHint="@color/yellow_r"
            android:textSize="12sp"
            android:textStyle="normal|bold|italic"
            android:typeface="monospace" />

        <ImageView
            android:id="@+id/ol_player_couple"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/ol_player_mod"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp" />

        <ImageView
            android:id="@+id/ol_player_family"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/ol_player_mod"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp" />
    </RelativeLayout>
</LinearLayout>
