<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/umeng_fb_atomLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffefefef"
    android:orientation="horizontal">

    <View
        android:id="@+id/umeng_fb_atom_left_margin"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/umeng_fb_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="@drawable/umeng_fb_user_bubble">

        <TextView
            android:id="@+id/umeng_fb_atomtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginRight="5dp"
            android:text="This is Content"
            android:textColor="#ff6f6f6f"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/umeng_fb_stateOrTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/umeng_fb_atomtxt"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:text="This is State or Send Time"
            android:textColor="#ffbdbdbd"
            android:textSize="12dp" />
    </RelativeLayout>

    <View
        android:id="@+id/umeng_fb_atom_right_margin"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>
