<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/LinearLayout1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="start"
              android:gravity="start|center_vertical|center_horizontal|center"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/ol_user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColorHighlight="@color/black"
        android:textSize="14sp"
        android:text="@string/ol_msg_view_usr"
        android:textColor="@color/white1"/>
    <TextView
        android:id="@+id/ol_user_mao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColorHighlight="@color/black"
        android:textSize="16sp"
        android:text="@string/ol_msg_view_mao"
        android:textColor="@color/white1"/>

    <ImageView
        android:id="@+id/ol_express_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ol_msg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:singleLine="false"
        android:textColorHighlight="@color/black"
        android:textSize="14sp"
        android:textColor="@color/white1"/>

    <TextView
        android:id="@+id/ol_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:singleLine="false"
        android:textColorHighlight="@color/black"
        android:textSize="14sp"
        android:textColor="@color/exit"
        android:typeface="monospace"/>
</LinearLayout>
