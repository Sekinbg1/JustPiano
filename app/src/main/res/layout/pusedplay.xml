<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#40000000"
        android:gravity="center">

        <ImageButton
            android:id="@+id/p_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true"
            android:background="@color/translent"
            android:src="@drawable/selector_child_play" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/m_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/grounpbar"
                android:gravity="center"
                android:text="曲名"
                android:textColor="@color/more"
                android:textSize="24sp"

                android:typeface="sans" />

            <ProgressBar
                android:id="@+id/m_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/m_name"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout1"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <TextView
                android:id="@+id/time_mid"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="曲目时长"
                android:textColor="@color/white1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/m_score"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/time_mid"
                android:gravity="center"
                android:text="最高记录"
                android:textColor="@color/white1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/l_nandu"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="左手难度"
                android:textColor="@color/white1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/m_nandu"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/time_mid"
                android:gravity="center"
                android:text="右手难度"
                android:textColor="@color/white1"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
