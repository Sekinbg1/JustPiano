<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ground"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 极品钢琴V4.5 "
            android:textColor="@color/white1"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浴火重生版"
            android:textColor="@color/yellow_r"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="3dp">

        <TextView
            android:id="@+id/app_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="账号:"

            android:textColor="@color/white1"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/search_box"
            android:textColor="@color/white1"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码:"
            android:textColor="@color/white1"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/search_box"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/white1"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <CheckBox
            android:id="@+id/chec_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住账号 " />

        <CheckBox
            android:id="@+id/chec_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码 " />

        <CheckBox
            android:id="@+id/chec_autologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动登录" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/ol_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/selector_ol_button_login"
            android:text=" 登录 "
            android:textColor="#ffffffff"
            android:textSize="21sp" />

        <Button
            android:id="@+id/ol_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ol_login"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/ol_login"
            android:background="@drawable/selector_ol_button"
            android:text=" 注册 "
            android:textColor="@color/white1"
            android:textSize="21sp" />

        <Button
            android:id="@+id/ol_change_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ol_login"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/ol_register"
            android:background="@drawable/selector_orange_button"
            android:text="切换账号"
            android:textColor="@color/white1"
            android:textSize="12sp" />

        <Button
            android:id="@+id/ol_change_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ol_change_account"
            android:layout_alignBottom="@+id/ol_change_account"
            android:layout_toEndOf="@+id/ol_change_account"
            android:background="@drawable/selector_orange_button"
            android:text="切换服务器"
            android:textColor="@color/white1"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>
