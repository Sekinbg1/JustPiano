<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:id="@+id/layout" android:background="@drawable/ground" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:id="@+id/linearLayout4" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="30sp" android:textColor="@color/white1" android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" 极品钢琴V4.302 "/>
        <TextView android:textSize="15sp" android:typeface="sans" android:textStyle="bold" android:textColor="@color/yellow_r" android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="梦魂☆梦回家族出品"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:id="@+id/linearLayout1" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:textColor="@color/white1" android:id="@+id/app_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="账号:" android:singleLine="true"/>
        <EditText android:textSize="20sp" android:id="@+id/username" android:background="@color/white" android:layout_width="160dp" android:layout_height="wrap_content" android:text=""/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:id="@+id/linearLayout2" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:textColor="@color/white1" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="密码:"/>
        <EditText android:textSize="20sp" android:id="@+id/password" android:background="@color/white" android:layout_width="160dp" android:layout_height="wrap_content" android:text="" android:singleLine="true" android:inputType="textPassword"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:id="@+id/linearLayout5" android:layout_width="match_parent" android:layout_height="wrap_content">
        <CheckBox android:id="@+id/chec_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="记住账号 "/>
        <CheckBox android:id="@+id/chec_psw" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="记住密码 "/>
        <CheckBox android:id="@+id/chec_autologin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="自动登录"/>
    </LinearLayout>
    <RelativeLayout android:gravity="center" android:id="@+id/RelativeLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:textSize="24sp" android:textColor="@color/white1" android:id="@+id/ol_login" android:background="@drawable/selector_ol_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" 登录 " android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
        <Button android:textSize="24sp" android:textColor="@color/white1" android:id="@+id/ol_register" android:background="@drawable/selector_ol_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text=" 注册 " android:layout_toRightOf="@+id/ol_login" android:layout_alignBaseline="@+id/ol_login" android:layout_alignParentTop="true"/>
        <Button android:textSize="12sp" android:textColor="@color/white1" android:id="@+id/ol_change_account" android:background="@drawable/selector_orange_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:text="更换账号" android:layout_toRightOf="@+id/ol_register" android:layout_alignBaseline="@+id/ol_login" android:layout_alignParentTop="true"/>
        <Button android:textSize="12sp" android:textColor="@color/white1" android:id="@+id/ol_find_pass" android:background="@drawable/selector_orange_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="找回密码" android:layout_toRightOf="@+id/ol_change_account" android:layout_alignBaseline="@+id/ol_change_account" android:layout_alignBottom="@+id/ol_change_account"/>
    </RelativeLayout>
</LinearLayout>
