<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/translent"
                android:gravity="center"
                android:keepScreenOn="true"
                android:orientation="vertical">

    <TextView
        android:id="@+id/left_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_3dp"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:background="@drawable/selector_ol_button"
        android:gravity="center"
        android:text="@string/melodylist1_hand"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/right_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_3dp"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:layout_toEndOf="@+id/left_hand"
        android:background="@drawable/selector_ol_button"
        android:gravity="center"
        android:text="@string/ol_hand_list_r"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/jiangdiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_hand"
        android:layout_alignStart="@id/left_hand"
        android:layout_alignEnd="@id/left_hand"
        android:layout_marginTop="@dimen/dimen_3dp"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:background="@drawable/selector_ol_button"
        android:gravity="center"
        android:text="@string/ol_hand_list_flat"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/shengdiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/right_hand"
        android:layout_alignStart="@id/right_hand"
        android:layout_alignEnd="@id/right_hand"
        android:layout_marginTop="@dimen/dimen_3dp"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:layout_toEndOf="@+id/jiangdiao"
        android:background="@drawable/selector_ol_button"
        android:gravity="center"
        android:text="@string/ol_hand_list_sharp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="28sp"/>

    <LinearLayout
        android:id="@+id/orientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jiangdiao"
        android:layout_alignStart="@id/jiangdiao"
        android:layout_alignEnd="@id/shengdiao">

        <TextView
            android:id="@+id/changeScreenOrientation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/right_hand"
            android:layout_alignStart="@id/right_hand"
            android:layout_alignEnd="@id/right_hand"
            android:layout_marginTop="@dimen/dimen_3dp"
            android:layout_marginBottom="@dimen/dimen_3dp"
            android:layout_toEndOf="@+id/jiangdiao"
            android:background="@drawable/selector_ol_button"
            android:gravity="center"
            android:text="@string/ol_hand_list_rotate"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="28sp"/>
    </LinearLayout>

    <ly.pp.justpiano3.view.DataSelectView
            android:id="@+id/note_speed"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_below="@id/orientation"
            android:layout_alignStart="@id/orientation"
            android:layout_alignEnd="@id/orientation"
            android:layout_marginTop="@dimen/dimen_3dp"
            android:background="@drawable/selector_ol_button"
            app:dataEditable="false"
            app:dataTextSize="26"
            app:dataTextColor="@color/white1"
            app:dataDefaultName="ä¸­"
            app:dataNameList="@array/down_entries"
            app:dataValueList="@array/down_value"/>

</RelativeLayout>
