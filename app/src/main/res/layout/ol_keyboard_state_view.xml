<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ol_keyboard_info"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/black"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/keyboard_mute"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:background="@color/brown"
            android:src="@drawable/stop">
        </ImageView>

        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/midi_note_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="top"
                android:max="60"
                android:progress="0"
                android:progressDrawable="@drawable/midi_note_progress">
            </ProgressBar>

            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/midi_note_speed"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="bottom|center_horizontal"
                    android:singleLine="true"
                    android:text="0.00kb/s"
                    android:textColor="@color/white1"
                    android:textSize="9sp">
                </TextView>

                <ImageView
                    android:id="@+id/midi_keyboard_on"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/midi_usb"
                    android:visibility="visible">
                </ImageView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
