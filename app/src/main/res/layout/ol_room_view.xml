<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:mySwitch="http://schemas.android.com/apk/res-auto" android:gravity="center" android:orientation="horizontal" android:id="@+id/RelativeLayout1" android:background="@drawable/selector_list_c" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="16sp" android:textColor="@color/white1" android:textColorHint="@color/yellow_d" android:gravity="center" android:id="@+id/ol_room_name" android:background="@drawable/title_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="极品钢琴" android:singleLine="true" android:layout_toRightOf="@+id/ol_room_id" android:layout_alignParentTop="true"/>
    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white1" android:gravity="center" android:id="@+id/ol_room_id" android:background="@drawable/settings_box" android:layout_width="40dp" android:layout_height="wrap_content" android:text="100" android:layout_alignBottom="@+id/ol_room_name" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
