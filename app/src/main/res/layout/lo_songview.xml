<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_c">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:background="@drawable/wait_back"
            android:orientation="horizontal">

            <ly.pp.justpiano3.view.ScrollText
                android:id="@+id/s_n"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/c_view_name"
                android:textColor="@color/white1"
                android:textColorHighlight="@color/blue_d"
                android:textColorHint="@color/blue_d"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/favor"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_list_f"
                    android:src="@drawable/favor" />

                <ImageView
                    android:id="@+id/play_waterfall"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_list_f"
                    android:src="@drawable/midi_usb" />

                <ImageView
                    android:id="@+id/play_image"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_list_f"
                    android:src="@drawable/listen_play" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grounpbar">

            <TextView
                android:id="@+id/sound_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/c_view_length"
                android:textColor="@color/white1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/nandu_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/c_view_rdiff"
                android:textColor="@color/white1"
                android:textColorHighlight="@color/black"
                android:textSize="10sp" />

            <RatingBar
                android:id="@+id/nandu"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:numStars="5" />

            <TextView
                android:id="@+id/nandu_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical|center_horizontal|center"
                android:layout_marginStart="@dimen/dimen_5dp"

                android:gravity="start|center_vertical|center_horizontal|center"
                android:text="@string/c_view_ldiff"
                android:textColor="@color/white1"
                android:textColorHighlight="@color/black"
                android:textSize="10sp" />

            <RatingBar
                android:id="@+id/leftnandu"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:numStars="5" />

            <ImageView
                android:id="@+id/is_new"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical|center_horizontal|center"
                android:layout_weight="1"
                android:src="@null" />

            <TextView
                android:id="@+id/highscore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/c_view_score"
                android:textColor="@color/white1"
                android:textColorHighlight="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/play"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/translent"
        android:gravity="center"
        android:src="@drawable/selector_child_play" />

</LinearLayout>

