<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_c"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ol_hall_name"
        android:textSize="18.0sp"
        android:textColor="@color/yellow_r"
        android:background="@drawable/_none"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6.0dip"
        android:text="极品钢琴"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/white1"
        android:textColorHint="@color/yellow_r"
        android:gravity="center"
        android:id="@+id/ol_getin_text"
        android:background="@drawable/selector_ol_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 进入 "
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/more"
        android:gravity="center"
        android:id="@+id/ol_hall_pnums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5.0dip"
        android:text="极品钢琴"
        android:singleLine="true"
        android:layout_toLeftOf="@id/ol_getin_text"
        android:layout_alignBaseline="@id/ol_getin_text"
        android:layout_alignBottom="@id/ol_getin_text"
        />
</RelativeLayout>
