<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_c"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ol_hall_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_marginRight="@dimen/dimen_6dp"
        android:background="@drawable/_none"

        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/yellow_r"
        android:textSize="18.0sp" />

    <TextView
        android:id="@+id/ol_getin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_ol_button"

        android:textSize="18.0sp"
        android:gravity="center"
        android:text="@string/ol_hall_view_enter"
        android:textColor="@color/white1"
        android:textColorHint="@color/yellow_r" />

    <TextView
        android:id="@+id/ol_hall_pnums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ol_getin_text"
        android:layout_alignBottom="@id/ol_getin_text"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/app_name"
        android:layout_alignBaseline="@id/ol_getin_text"
        android:textColor="@color/more"
        android:textSize="18.0sp" />
</RelativeLayout>
