<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ground"
    android:gravity="center"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/family_people_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@color/translent"
        android:cacheColorHint="#00ffffff"
        android:choiceMode="singleChoice"
        android:divider="@drawable/divider"
        android:listSelector="@color/translent"
        android:textColor="@color/white1"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/translent"
        android:baselineAligned="false"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/blue_translent"
            android:text="家族名称："
            android:textColor="@color/green_r"
            android:textSize="14sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/ol_rectangle_blue"
            android:scrollbars="none"
            android:textColor="@color/white1">

            <TextView
                android:id="@+id/declaration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ol_rectangle_blue"
                android:text="家族宣言"
                android:textColor="@color/white1"
                android:textSize="14sp" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/translent"
            android:baselineAligned="false"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/manage_family"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/selector_ol_button"
                android:enabled="false"
                android:gravity="center"
                android:text="族长入口"
                android:textColor="@color/white1"
                android:textSize="14sp" />

            <Button
                android:id="@+id/in_out"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/selector_ol_button"
                android:gravity="center"
                android:text="申请加入"
                android:textColor="@color/white1"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
