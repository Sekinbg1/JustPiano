<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_c"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ol_cool"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:layout_toEndOf="@+id/ol_perfect"
            android:fontFamily="@font/main_bold"
            android:gravity="start"
            android:text="@string/finish_zero"
            android:textColor="@color/white1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ol_great"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ol_cool"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:layout_toEndOf="@+id/ol_cool"
            android:fontFamily="@font/main_bold"
            android:gravity="start"
            android:text="@string/finish_zero"
            android:textColor="@color/white1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ol_bad"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:layout_toEndOf="@+id/ol_great"
            android:fontFamily="@font/main_bold"
            android:gravity="start"
            android:text="@string/finish_zero"
            android:textColor="@color/white1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ol_miss"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:layout_toEndOf="@+id/ol_bad"
            android:fontFamily="@font/main_bold"
            android:gravity="start"
            android:text="@string/finish_zero"
            android:textColor="@color/white1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ol_combo"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:layout_toEndOf="@+id/ol_miss"
            android:fontFamily="@font/main_bold"
            android:gravity="start"
            android:text="@string/finish_zero"
            android:textColor="@color/white1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ol_perfect"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:layout_toEndOf="@+id/ol_name"
            android:fontFamily="@font/main_bold"
            android:gravity="start"
            android:text="@string/finish_zero"
            android:textColor="@color/white1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ol_total"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:layout_marginLeft="@dimen/dimen_3dp"
            android:layout_toEndOf="@+id/ol_combo"
            android:layout_toRightOf="@+id/ol_combo"
            android:fontFamily="@font/main_bold"
            android:gravity="left"
            android:text="@string/finish_zero"
            android:textColor="@color/white1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ol_name"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/main_bold"
            android:gravity="start"
            android:maxLines="1"
            android:text="@string/ol_c_finish_view"
            android:textColor="@color/white1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ol_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ol_total"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/finish_zero"
            android:textColor="@color/settings"
            android:textSize="14sp"
            android:fontFamily="@font/main_bold" />
    </RelativeLayout>
</LinearLayout>
