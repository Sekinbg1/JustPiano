<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_c"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ol_cool"
            android:layout_width="48sp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/ol_perfect"
            android:gravity="start"
            android:text="0"
            android:textColor="@color/white1"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ol_great"
            android:layout_width="48sp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ol_cool"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/ol_cool"
            android:gravity="start"
            android:text="0"
            android:textColor="@color/white1"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ol_bad"
            android:layout_width="48sp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/ol_great"
            android:gravity="start"
            android:text="0"
            android:textColor="@color/white1"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ol_miss"
            android:layout_width="48sp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/ol_bad"
            android:gravity="start"
            android:text="0"
            android:textColor="@color/white1"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ol_combo"
            android:layout_width="48sp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/ol_miss"
            android:gravity="start"
            android:text="0"
            android:textColor="@color/white1"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ol_perfect"
            android:layout_width="48sp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/ol_name"
            android:gravity="start"
            android:text="0"
            android:textColor="@color/white1"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ol_total"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_toEndOf="@+id/ol_combo"
            android:layout_toRightOf="@+id/ol_combo"
            android:gravity="left"
            android:text="0"
            android:textColor="@color/white1"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ol_name"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="start"
            android:singleLine="true"
            android:text="用户 "
            android:textColor="@color/white1"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ol_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ol_total"
            android:gravity="center"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/settings"
            android:textSize="12sp"
            android:textStyle="normal|bold|italic" />
    </RelativeLayout>
</LinearLayout>
