<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ol_dailytime_layout"
    android:layout_width="@dimen/dimen_330dp"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_c"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ol_user_name"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_marginStart="@dimen/dimen_3dp"
        android:gravity="start"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white1" />

    <TextView
        android:id="@+id/ol_online_time"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginStart="@dimen/dimen_3dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white1" />

    <TextView
        android:id="@+id/ol_dailytime_bonus"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginStart="@dimen/dimen_3dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white1" />

    <TextView
        android:id="@+id/ol_bonus_get"
        android:layout_width="@dimen/dimen_34dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginStart="@dimen/dimen_3dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white1" />

</LinearLayout>
