<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_c"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ol_challenge_position"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dimen_3dp"
        android:layout_weight="1"
        android:fontFamily="@font/main_bold"
        android:gravity="center"
        android:text="@string/ol_c_challenge_view"
        android:textColor="@color/white1"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ol_challenge_user"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_3dp"
        android:layout_weight="5"
        android:fontFamily="@font/main_bold"
        android:gravity="center"
        android:text="@string/ol_c_challenge_view"
        android:textColor="@color/white1"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ol_challenge_score"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_3dp"
        android:layout_weight="2"
        android:fontFamily="@font/main_bold"
        android:gravity="center"
        android:text="@string/ol_c_challenge_view"
        android:textColor="@color/white1"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ol_challenge_time"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_3dp"
        android:layout_weight="3"
        android:fontFamily="@font/main_bold"
        android:gravity="center"
        android:text="@string/ol_c_challenge_view"
        android:textColor="@color/white1"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>
