<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_5dp">

        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ol_couple_mod"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <ImageView
                android:id="@+id/ol_couple_shoes"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp" />

            <ImageView
                android:id="@+id/ol_couple_trousers"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp" />

            <ImageView
                android:id="@+id/ol_couple_hair"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp" />

            <ImageView
                android:id="@+id/ol_couple_eye"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp" />

            <ImageView
                android:id="@+id/ol_couple_jacket"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ol_couple_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ol_couple_mod"
                android:layout_alignEnd="@+id/ol_couple_mod"
                android:layout_alignParentStart="true"
                android:background="@drawable/list"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ol_couple_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ol_couple_name"
                android:layout_alignEnd="@+id/ol_couple_mod"
                android:textStyle="bold"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@color/green_r"
                android:textColorHint="@color/yellow_r"
                android:textSize="12sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/ol_couple_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ol_couple_level"
                android:layout_alignEnd="@+id/ol_couple_mod"
                android:textStyle="bold"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@color/yellow"
                android:textColorHint="@color/yellow_r"
                android:textSize="12sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/ol_couple_clname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/filled_classname"
                android:textStyle="bold"
                android:gravity="center"
                android:maxEms="1"
                android:textColor="@color/white1"
                android:textColorHint="@color/yellow_r"
                android:textSize="12sp"
                android:typeface="monospace" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dimen_30dp">

            <ImageView
                android:id="@+id/couple_type"
                android:layout_width="@dimen/dimen_42dp"
                android:layout_height="@dimen/dimen_42dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.22"
                android:paddingLeft="@dimen/dimen_4dp"
                android:paddingRight="@dimen/dimen_4dp"
                android:src="@drawable/couple_1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ol_player_mod"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <ImageView
                android:id="@+id/ol_player_eye"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp" />

            <ImageView
                android:id="@+id/ol_player_hair"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp" />

            <ImageView
                android:id="@+id/ol_player_shoes"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp" />

            <ImageView
                android:id="@+id/ol_player_trousers"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp" />

            <ImageView
                android:id="@+id/ol_player_jacket"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp" />

            <TextView
                android:id="@+id/ol_player_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ol_player_mod"
                android:layout_alignEnd="@+id/ol_player_mod"
                android:layout_alignParentStart="true"
                android:background="@drawable/list"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ol_player_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ol_player_name"
                android:layout_alignEnd="@+id/ol_player_mod"
                android:textStyle="bold"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@color/green_r"
                android:textColorHint="@color/yellow_r"
                android:textSize="12sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/ol_player_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ol_player_level"
                android:layout_alignEnd="@+id/ol_player_mod"
                android:textStyle="bold"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@color/yellow"
                android:textColorHint="@color/yellow_r"
                android:textSize="12sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/ol_player_clname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/filled_classname"
                android:textStyle="bold"
                android:gravity="center"
                android:maxEms="1"
                android:textColor="@color/white1"
                android:textColorHint="@color/yellow_r"
                android:textSize="12sp"
                android:typeface="monospace" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_105dp"
        android:background="@drawable/list"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/couple_bless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white1" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
