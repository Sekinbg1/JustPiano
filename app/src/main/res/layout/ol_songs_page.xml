<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ground"
    android:gravity="center"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/app_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在线曲库"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white1" />

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="180dp"
            android:layout_weight="1.2" />

        <Button
            android:id="@+id/ol_melodyList_b"
            android:layout_width="8dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:background="#10c6ffe9"
            android:text="分类"
            android:textColor="@color/white1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ol_hotSongs_b"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#10293535"
            android:text="最热"
            android:textColor="@color/white1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ol_newSongs_b"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#10c6ffe9"
            android:text="最新"
            android:textColor="@color/white1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ol_favor"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#10293535"
            android:text="收藏"
            android:textColor="@color/white1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ol_test_b"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#10c6ffe9"
            android:text="测试"
            android:textColor="@color/white1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ol_search_b"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#10293535"
            android:text="搜索"
            android:textColor="@color/white1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ol_recent_b"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#10c6ffe9"
            android:text="新冠"
            android:textColor="@color/white1"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="180dp"
            android:layout_weight="1.2" />
    </LinearLayout>
</LinearLayout>
